@{
    Layout = "_LayoutHomeNew";
}
<!-- Masthead -->
<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Ta kontroll over din studiehverdag og oppnå bedre resultater!</h1>
            </div>
        </div>
    </div>
</header>

<!-- Icons Grid -->
<section class="features-icons bg-light text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="icon-calendar m-auto text-primary"></i>
                    </div>
                    <h3>Planlegg</h3>
                    <p class="lead mb-0">Planlegg dine studieøkter for bedre oversikt!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="icon-check m-auto text-primary"></i>
                    </div>
                    <h3>Følg opp</h3>
                    <p class="lead mb-0">Gjennomfør studieøktene og se hva du har brukt tiden på!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="icon-screen-smartphone m-auto text-primary"></i>
                    </div>
                    <h3>Mobilvennlig</h3>
                    <p class="lead mb-0">Godt tilpasset mobiltelefoner og nettbrett!</p>
                </div>
            </div>
        </div>
    </div>
</section>
