@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

<ul class="nav-profile">
    
    <li class="profile dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            <div class="img" style="background-image: url('https://avatars1.githubusercontent.com/u/23060443?v=4&s=40')"> </div>
            <span class="name"> @UserManager.GetUserAsync(User).Result.UserName</span>
        </a>
        <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
            <a class="dropdown-item" href="#">
                <i class="fa fa-user icon"></i> Konto
            </a>
            <a class="dropdown-item" href="#">
                <i class="fa fa-gear icon"></i> Innstillinger
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                <i class="fa fa-power-off icon"></i> Logg ut
            </a>
        </div>
    </li>
</ul>