@model Assignment
<h2>Endre oppgave</h2>
<hr />
<div class="container-fluid">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3">
                <label asp-for="Deadline"></label>
                <input class="form-control" asp-for="Deadline"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3">
                <label asp-for="DateCompleted"></label>
                <input class="form-control" asp-for="DateCompleted"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <label asp-for="CourseId"></label>
                <select class="form-control" asp-for="CourseId" asp-items="@ViewBag.Courses"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <a href="javascript:history.go(-1)" class="btn btn-danger"><i class="fa fa-times"></i> Avbryt</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
            </div>
        </div>
    </form>
</div>
@section scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}


