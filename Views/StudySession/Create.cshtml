@model StudySession
@if (TempData["Message"] != null)
{
    @Html.Raw(TempData["Message"])
}
<h2>Ny studieøkt</h2>
<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger row"></div>
    <div class="form-row">
        <div class="form-group col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6">
            <label class="col-form-label" asp-for="@Model.Title"></label>
            <input class="form-control" asp-for="@Model.Title" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6">
            <label class="col-form-label" asp-for="@Model.Description"></label>
            <textarea class="form-control" asp-for="@Model.Description"></textarea>
        </div>
    </div>
    <fieldset>
        <legend>Når skal du jobbe?</legend>
        <div class="form-row">
            <div class="form-group col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <label asp-for="@Model.StartDate" class="col-form-label"></label>
                <input asp-for="@Model.StartDate" class="form-control" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <label asp-for="@Model.StartTime" class="col-form-label"></label>
                <input asp-for="@Model.StartTime" class="form-control" />
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>Hvor lenge skal du jobbe?</legend>
        <div class="form-row">
            <div class="form-group col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <label asp-for="@Model.Duration" class="col-form-label"></label>
                <input asp-for="@Model.Duration" class="form-control" />
            </div>
        </div>
    </fieldset>


    <fieldset>
        <legend>Hva skal du jobbe med?</legend>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="@Model.CourseId" class="col-form-label"></label>
                <select class="form-control" asp-for="@Model.CourseId" asp-items="@{new SelectList(ViewBag.Courses, "Id", "Title")}">
                    <option selected value="0">Velg et fag..</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="@Model.StudySessionTypeId" class="col-form-label"></label>
                <select class="form-control" asp-for="@Model.StudySessionTypeId" asp-items="@{new SelectList(ViewBag.StudySessionTypes, "Id", "Title")}">
                    <option selected value="0">Velg en kategori..</option>
                </select>
            </div>
        </div>
    </fieldset>

    <a class="btn btn-danger" asp-action="Index"><i class="fa fa-times"></i> Avbryt</a>
    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
</form>

@section scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}